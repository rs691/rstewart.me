---
import { getCollection } from 'astro:content';

import BaseLayout from '../src/layouts/BaseLayout.astro';

import ContactCTA from '../src/components/ContactCTA.astro';
import PortfolioPreview from '../src/components/PortfolioPreview.astro';
import Hero from '../src/components/Hero.astro';
import Grid from '../src/components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="My Work | Robert Stewart"
	description="Learn about Robert Stewart's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Projects"
				tagline="See some of the projects I've worked on."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
