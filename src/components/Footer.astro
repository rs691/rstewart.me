---
const currentYear = new Date().getFullYear();
---

<footer>
	<!-- center the text -->

	 <date date={new Date()} />

	 

		<p>{currentYear} Robert Stewart</p>

</footer>
<style>
	footer {
	
		flex-direction: column;
		font-size: var(--text-md);
		color: var(--gray-200);
		background: var(--gray-900);
		padding: 1.5rem 2rem;
		border-top: 1px solid var(--gray-800);
		box-shadow: var(--shadow-md);
		transition: background-color var(--theme-transition);
		width: 100%;
		max-width: 100vw;
		position: relative;
		z-index: 10;
		margin-top: auto;
		text-align: center;
		

	}


	footer p {
		margin: 0;
		font-family: var(--font-brand);
		font-weight: 600;
	}
	
	

</style>
