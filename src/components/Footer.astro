---
import Icon from './Icon.astro';
const currentYear = new Date().getFullYear();
---

<footer>
	<!-- center the text -->

	 <date date={new Date()} />

	 

		<p>{currentYear} Robert Stewart</p>

</footer>
<style>
	footer {
	
		flex-direction: column;
		font-size: var(--text-sm);
		color: var(--gray-200);
		background: var(--gray-900);
		padding: 1.5rem 2rem;
		border-top: 1px solid var(--gray-800);
		box-shadow: var(--shadow-md);
		transition: background-color var(--theme-transition);
		width: 100%;
		max-width: 100vw;
		position: relative;
		z-index: 10;
		margin-top: auto;
		text-align: center;
		

	}

	footer a {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	footer a:hover,
	footer a:focus {
		text-decoration-color: currentColor;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		justify-content: center;
		align-items: center;
	}
	.socials {
		display: flex;
		flex-wrap: wrap;
		gap: 0.625rem;
		font-size: var(--text-xl);
	}

	@media (min-width: 50em) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 5rem;
		}
		.group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center; /* Centers flex items vertically (if needed) */
        align-items: center; /* Centers flex items horizontally (the <p> tag) */
    }
		.socials {
			justify-content: flex-end;
		}
	}
</style>
