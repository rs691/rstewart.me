<style>
  html, body, .full-bg {
	min-height: 100vh;
	height: 100%;
	width: 100%;
  }

  .full-bg {
	--hero-bg: var(--bg-image-subtle-2);
	position: absolute;
	top: 0; left: 0; right: 0; bottom: 0;
	z-index: -1;
  }

  .hero {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
  }

  .hero img {
	max-width: 100%;
	height: auto;
  }

  .roles {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	justify-content: center;
  }
</style>